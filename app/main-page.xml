<Page 
xmlns="http://www.nativescript.org/tns.xsd" xmlns:maps="nativescript-google-maps-sdk" xmlns:Card="nativescript-cardview" xmlns:FAB="nativescript-floatingactionbutton"
loaded="pageLoaded" actionBarHidden="true">
  <ActionBar title="CHEKIBREKI" class="action-bar"></ActionBar>
  <!-- Your UI components go here -->
<GridLayout rows="auto,*">
    <maps:mapView row="1" zIndex="0" latitude="{{ latitude }}" longitude="{{ longitude }}" 
                                    zoom="{{ zoom }}" bearing="{{ bearing }}" 
                                    tilt="{{ tilt }}" padding="{{ padding }}" mapReady="onMapReady"  
                                markerSelect="onMarkerSelect" markerBeginDragging="onMarkerBeginDragging"
                                markerEndDragging="onMarkerEndDragging" markerDrag="onMarkerDrag"
                                cameraChanged="onCameraChanged" />
    <Card:CardView zIndex="2" row="1" class="cardStyle" elevation="10">
           <grid-layout rows="auto,auto,*" columns="auto,auto,*">
               <label text="This is test!" class="info" margin="10" textWrap="true" row="1" colSpan="2" />          
           </grid-layout>
    </Card:CardView>
    <FAB:fab tap="fabTap"
                     row="1"
                     elevation="20"
                     zIndex="3"
                     icon="res://ic_add_white"
                     rippleColor="#f1f1f1"
                     class="fab-button" />
    <FAB:fab tap="fabTap"
                     row="1"
                     elevation="20"
                     zIndex="3"
                     icon="res://ic_add_white"
                     rippleColor="#f1f1f1"
                     class="to-my-location" />
  </GridLayout>
</Page>
