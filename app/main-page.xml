<Page 
xmlns="http://www.nativescript.org/tns.xsd" 
xmlns:maps="nativescript-google-maps-sdk" 
xmlns:Card="nativescript-cardview" 
xmlns:FAB="nativescript-floatingactionbutton"

loaded="pageLoaded" 
actionBarHidden="true">
<GridLayout rows="auto,*">
    <maps:mapView row="1" zIndex="0" latitude="{{ latitude }}" longitude="{{ longitude }}" 
                                    zoom="{{ zoom }}" bearing="{{ bearing }}" 
                                    tilt="{{ tilt }}" padding="{{ padding }}" mapReady="onMapReady"  
                                markerSelect="onMarkerSelect" coordinateTapped="coordsTap" markerBeginDragging="onMarkerBeginDragging"
                                markerEndDragging="onMarkerEndDragging" markerDrag="onMarkerDrag"
                                cameraChanged="onCameraChanged" />
    <Card:CardView tap="showDetail" id="test" zIndex="2" row="1" class="cardStyle" elevation="10">
           <grid-layout rows="auto,auto,*" columns="auto,*">
               <label text="Brno" class="info" textWrap="true" row="1" col="1" />          
               <label class="detail" text="Some more info which can be useful maybe. What about now and something more text and and and" textWrap="true" row="2" col="1" />
           </grid-layout>
    </Card:CardView>
    
    <FAB:fab tap="funOut"
                     row="1"
                     elevation="20"
                     zIndex="3"
                     icon="res://ic_navigation_white_24dp"
                     rippleColor="#f1f1f1"
                     class="fab-button" />

  </GridLayout>
</Page>
